menuconfig MOTOR
    bool "MOTOR for vibration motor"
    depends on SPI 
    help
        Enable driver for SPI-based vibration motor

if MOTOR 

module = MOTOR
module-str = motor
source "subsys/logging/Kconfig.template.log_config"

config MOTOR_INIT_PRIORITY
    int "Motor init priority"
    default 90
    help
        Motor initialization priority for the driver

choice 
        prompt "MOTOR timer input capture mode"
        default MOTOR_NO_INPUT_CAPTURE_MODE
        help
                Select the input capture mode for the motor transfer. 
config MOTOR_NO_INPUT_CAPTURE_MODE
        bool "no arch specific implementation"
config MOTOR_STM32_INPUT_CAPTURE_MODE
        bool "STM32 input capture mode"
        depends on SOC_FAMILY_STM32
        select USE_STM32_LL_TIM
        select USE_STM32_LL_RCC if SOC_SERIES_STM32F4X || SOC_SERIES_STM32F7X || SOC_SERIES_STM32H7X
endchoice 

        
endif # MOTOR
