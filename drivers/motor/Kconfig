menuconfig MOTOR
    bool "MOTOR for vibration motor"
    depends on SPI 
    help
        Enable driver for SPI-based vibration motor

if MOTOR 

module = MOTOR
module-str = motor
source "subsys/logging/Kconfig.template.log_config"

config MOTOR_INIT_PRIORITY
    int "Motor init priority"
    default 90
    help
        Motor initialization priority for the driver

        
endif # MOTOR
